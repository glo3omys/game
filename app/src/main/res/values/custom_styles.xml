<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="defaultButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">40dp</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:fontFamily">@font/custom_font_family</item>
        <item name="elevation">10dp</item>
    </style>

    <style name="defaultRadioGroupStyle">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/custom_radiogroup</item>
    </style>

    <style name="myCustomDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/custom_dialog</item>
        <item name="elevation">10dp</item>
    </style>

</resources>